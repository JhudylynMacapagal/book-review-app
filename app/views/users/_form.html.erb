

<div class="modal-dialog" style="width: 300px; height: 300px">
  <div class="modal-content">
     <div class="edit-book-form"> <!--BOX SHADOW-->

        <div class="modal-header" style="background: linear-gradient(to top, #1a936f 0%, #88d498 100%);">
           <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
           <center><h5 class="modal-title" style=" font-size: 16pt; font-family: Arial; color: white">EDIT MY PROFILE</h5></center>
        </div>

    <%= form_for @user, remote: true, html: { style: "display:inline;" } do |f| %>

      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :full_name %>
          <%= f.text_field :full_name %>
        </div>
  
        <div class="form-group">
          <%= f.label :about_me %>
          <%= f.text_area :about_me, size: "30x5" %>
        </div>

        <div class="form-group">
          <p><b>Upload Profile Picture: </b></p>
          <%= f.file_field :avatar, accept: 'image/png, image/jpg, image/jpeg, image/gif' %>
        </div>

      </div>

      <div class="modal-footer">
        <%= f.submit "Save", class: "btn-custom4" %>
        <%= link_to "Cancel", "#", class: "btn-custom5", data: {dismiss: "modal"} %>
      </div>
    <% end %>

    </div>
  </div>
</div>