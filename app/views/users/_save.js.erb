$("ul.errors").html("")
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("user-show").html("<%= escape_javascript(render 'show') %>")
  $("#profile-modal").modal("hide")
<% end %>